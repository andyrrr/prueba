<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainInicio" tools:layout_editor_absoluteY="25dp">

    <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="415dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/buttonSeguir"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="91dp"
            android:layout_marginStart="91dp" android:layout_marginEnd="90dp" android:layout_marginRight="90dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="727px"
            android:layout_height="436px" app:srcCompat="@mipmap/logocarpooling"
            android:id="@+id/imageView4"
            android:adjustViewBounds="true" android:cropToPadding="true"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/login_button"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="165dp"
            android:layout_marginEnd="33dp" android:layout_marginRight="33dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="34dp" android:layout_marginStart="34dp" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Seguir"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/buttonSeguir" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp" android:layout_marginEnd="136dp" android:layout_marginRight="136dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="164dp"/>


</android.support.constraint.ConstraintLayout>