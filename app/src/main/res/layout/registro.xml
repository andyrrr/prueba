<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainRegistro" tools:layout_editor_absoluteY="25dp">
    <ScrollView
            android:layout_width="598dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <ImageView
                    android:layout_width="727px"
                    android:layout_height="436px" app:srcCompat="@mipmap/logocarpooling"
                    android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="51dp"
                    android:layout_marginStart="51dp" android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.434"
                    app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
                    android:adjustViewBounds="true" android:cropToPadding="true" android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintVertical_bias="0.526"/>


            <TextView
                    android:text="@string/nombre"
                    android:layout_width="203dp"
                    android:layout_height="43dp"
                    android:id="@+id/textView2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:layout_marginEnd="141dp" android:layout_marginRight="141dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/editName" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="110dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/editName" android:layout_marginEnd="129dp"
                    android:layout_marginRight="129dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:layout_marginBottom="3dp" app:layout_constraintBottom_toTopOf="@+id/textView5"/>

            <TextView
                    android:text="@string/fecha"
                    android:layout_width="203dp"
                    android:layout_height="43dp"
                    android:id="@+id/textView5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="141dp" android:layout_marginRight="141dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editName"
                    app:layout_constraintBottom_toTopOf="@+id/editFecha"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Apellido"
                    android:ems="10"
                    android:id="@+id/editFecha" android:layout_marginEnd="129dp"
                    android:layout_marginRight="129dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
            <TextView
                    android:text="@string/email"
                    android:layout_width="203dp"
                    android:layout_height="43dp"
                    android:id="@+id/textView"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:layout_marginEnd="141dp"
                    android:layout_marginRight="141dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/editFecha" android:layout_marginBottom="1dp"
                    app:layout_constraintBottom_toTopOf="@+id/editEmail"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:text="Email"
                    android:id="@+id/editEmail" android:layout_marginEnd="129dp"
                    android:layout_marginRight="129dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView7"/>

            <EditText
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Lugar"
                    android:id="@+id/editLugar"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView3"
                    android:layout_marginEnd="129dp" android:layout_marginRight="129dp"
                    android:layout_marginBottom="12dp"/>
            <EditText
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Número de Carné"
                    android:id="@+id/editCarne"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintBottom_toTopOf="@+id/buttonRegistroListo"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginEnd="126dp"
                    android:layout_marginRight="126dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="30dp" app:layout_constraintHorizontal_bias="0.464"/>
            <TextView
                    android:text="@string/carné"
                    android:layout_width="199dp"
                    android:layout_height="41dp"
                    android:id="@+id/textView3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="141dp"
                    android:layout_marginRight="141dp"
                    app:layout_constraintHorizontal_bias="0.491"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/editLugar" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/editCarne"/>
            <Button
                    android:text="Cam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonFoto"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/textView3"
                    android:layout_marginEnd="33dp" android:layout_marginRight="33dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/buttonMapa"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="177dp"/>


            <TextView
                    android:text="¿Dónde vive?"
                    android:layout_width="199dp"
                    android:layout_height="41dp"
                    android:id="@+id/textView7"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:layout_marginEnd="141dp"
                    android:layout_marginRight="141dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.491" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/editEmail"
                    android:layout_marginBottom="21dp" app:layout_constraintBottom_toTopOf="@+id/textView3"/>

            <Button
                    android:text="Mapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonMapa" android:layout_marginLeft="22dp" android:layout_marginStart="22dp"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    android:layout_marginEnd="31dp"
                    android:layout_marginRight="31dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="351dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/buttonFoto"/>
            <Button
                    android:text="Listo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonRegistroListo"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editCarne" android:layout_marginTop="30dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>